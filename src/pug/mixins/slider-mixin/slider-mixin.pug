mixin slider(add)    
    .swiper(class=add)
        .swiper-wrapper
            .swiper-slide
                .swiper-img
                    picture
                        source(media="(max-width:769px)", srcset="images/main_slider_pic1_mobile.jpg", sizes="").
                        img(src="images/main_slider_pic1.jpg", alt="")
            .swiper-slide.swiper-img
                .swiper-img
                    picture
                        source(media="(max-width:769px)", srcset="images/main_slider_pic2_mobile.jpg", sizes="").
                        img(src="images/main_slider_pic2.jpg", alt="")
            .swiper-slide.swiper-img
                .swiper-img
                    picture
                        source(media="(max-width:769px)", srcset="images/main_slider_pic3_mobile.jpg", sizes="").
                        img(src="images/main_slider_pic3.jpg", alt="")
        .swiper-pagination

